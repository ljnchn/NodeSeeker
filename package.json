{
  "name": "NodeSeeker",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.jsonc",
    "build": "node scripts/build.js",
    "preview": "pnpm run build && wrangler preview",
    "deploy": "pnpm run build && wrangler deploy",
    "deploy:prod": "pnpm run build && wrangler deploy --config wrangler.prod.jsonc",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "node scripts/test.js",
    "deploy:auto": "node scripts/deploy.js",
    "db:create": "wrangler d1 create nodeseeker-db",
    "db:migrate": "wrangler d1 execute nodeseeker-db --file=./migrations/0001_initial.sql",
    "db:migrate:prod": "wrangler d1 execute nodeseeker-prod-db --file=./migrations/0001_initial.sql",
    "logs": "wrangler tail",
    "logs:prod": "wrangler tail --name nodeseeker-prod"
  },
  "dependencies": {
    "hono": "^4.8.2"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "typescript": "^5.3.3",
    "wrangler": "^4.17.0"
  }
}